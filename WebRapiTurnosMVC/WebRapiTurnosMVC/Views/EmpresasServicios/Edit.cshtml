<div class="container">
    
    <h1> Servicios de la empresa: @Model.IdEmpresa</h1>
            <p>Ingrese datos</p>

            <form action="/EmpresasServicios/EditPost" method="post" autocomplete="off">
                <div class="form-group">
                    <label for="usr">IdServicio:</label>
                    @Html.TextBoxFor(model => model.IdServicio, new { @class = "form-control" })
                  
                </div>
                <div class="form-group">
                    <label for="usr">Descripcion Servicio:</label>
                    @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
              
                </div>
                <div class="form-group">
                    <label for="pwd">Precio Sugerido:</label>
                    @Html.TextBoxFor(model => model.PrecioSugerido, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="sel1">Duracion Turno:</label>
                    @Html.DropDownListFor(model => model.IdDuracionTurno, (List<SelectListItem>)ViewBag.ListaDuracionTurnos,"Duracion Turno", new { @class= "form-control" })
                   
                </div>
                <input class="btn btn-primary" type="submit" value="Grabar" />
