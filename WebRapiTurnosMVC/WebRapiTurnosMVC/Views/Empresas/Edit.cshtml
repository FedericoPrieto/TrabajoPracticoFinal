@model RapiTurnosDTO.DTOs.EmpresasDTO
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>



<body>
    <div class="container">
        <h2>Modificacion De Empresa</h2>

        <form action="EditPut" method="post" autocomplete="off">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="usr">IdEmpresa:</label>
                    @*<input type="text" class="form-control" id="Nombre">*@
                    @Html.TextBoxFor(model => model.IdEmpresa, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label for="usr">Email:</label>
                    @*<input type="text" class="form-control" id="Nombre">*@
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label for="usr">Password:</label>
                    @*<input type="text" class="form-control" id="Nombre">*@
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="usr">Nombre Empresa:</label>
                @*<input type="text" class="form-control" id="Nombre">*@
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="pwd">Alias:</label>
                @*<input type="text" class="form-control" id="Alias">*@
                @Html.TextBoxFor(model => model.Alias, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="pwd">Direccion:</label>
                @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
                @*<input type="text" class="form-control" id="Alias">*@
            </div>
            <div class="form-group">
                <label for="comment">Reseña:</label>
                @*<textarea class="form-control" rows="3" id="comment"></textarea>*@
                @Html.TextAreaFor(model => model.Descripcion, 3)

            </div>
            <div class="form-group">
                <label for="sel1">Rubro:</label>
                @Html.DropDownListFor(model => model.RubroId, (List<SelectListItem>)ViewBag.Rubros, "Rubro", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="sel2">SubRubro:</label>
                <select class="form-control" id="sel2">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>

            <input type="submit" value="Grabar" class="btn btn-primary" />
        </form>
    </div>

    @*<div class="container">
            <input type="submit" class="btn btn-info" value="Grabar">
        </div>*@

</body>
</html>


