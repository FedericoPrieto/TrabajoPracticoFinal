@model RapiTurnosDTO.DTOs.DuracionTurnosDTO
@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>


<div class="container">

  
    <p>Ingrese datos</p>

    <form action="/DuracionTurnos/EditPost" method="post" autocomplete="off">
        <div class="form-group">
            <label for="usr">ID:</label>
            @Html.TextBoxFor(model => model.IdDuracionTurno, new { @class = "form-control", @readonly = "readonly" })
            @*<input type="text" name="Descripcion">*@
        </div>
        <div class="form-group">
            <label for="usr">Descripcion:</label>
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
            @*<input type="text" name="Descripcion">*@
        </div>
        <div class="form-group">
            <label for="pwd">Duracion en minutos:</label>
            @Html.TextBoxFor(model => model.Minutos, new { @class = "form-control" })
        </div>
        <input type="submit" value="Grabar" class="btn btn-primary" />
    </form>
</div>

<a href="https://localhost:44343/DuracionTurnos" class="btn btn-info btn-lg">
    <span class="glyphicon glyphicon-circle-arrow-left"> Volver  </span>
</a>

